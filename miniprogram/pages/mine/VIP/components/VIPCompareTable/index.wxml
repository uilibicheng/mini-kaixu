<!-- pages/mine/VIP/components/VIPCompareTable/index.wxml -->
<view class="compare-table">
  <view class="table-row">
    <view class="table-column">
      <view class="table-th">专属特权</view>
    </view>
    <view class="table-column">
      <view class="table-th">普通用户</view>
    </view>
    <view class="table-column">
      <view class="table-th">年度会员</view>
    </view>
  </view>
  <block wx:for="{{compareTableList}}" wx:key="index">
    <view class="table-row">
      <view class="table-column">
        <view class="table-td">
          <view class="compare-name">
            {{item.text}}
            <view class="vip-label" wx:if="{{item.label}}">{{item.label}}</view>
          </view>
        </view>
      </view>
      <view class="table-column">
        <view class="table-td">
          <image wx:if="{{item.normalIcon}}" class="normal-icon" src="{{item.normalIcon}}" />
          <view wx:else class="normal-text">
            {{item.normalText}}
          </view>
        </view>
      </view>
      <view class="table-column">
        <view class="table-td">
          <image wx:if="{{item.VIPIcon}}" class="VIP-icon" src="{{item.VIPIcon}}" />
          <view wx:else class="VIP-text">
            {{item.VIPText}}
          </view>
        </view>
      </view>
    </view>
  </block>
</view>