<!--pages/schoolDetail/components/schoolJobList/index.wxml-->
<view class="school-job">
  <scroll-view class="job-scroll safe-bottom" scroll-y type="list">
    <view class="job-content">
      <view class="job-empty" wx:if="{{!(jobList && jobList.length)}}">
        <ErrorOrEmpty />
      </view>

      <view class="job-list" wx:else>
        <view class="job-item-wrap" wx:for="{{jobList}}" wx:key="index">
          <JobItemBolck>
            <view slot="header-right" class="job-salary">10-12K/年</view>
            <view slot="borrom-right" class="info-btn">立即报名</view>
          </JobItemBolck>
        </view>
        <view class="loding-tip">已经到底了</view>
      </view>
    </view>
  </scroll-view>
</view>