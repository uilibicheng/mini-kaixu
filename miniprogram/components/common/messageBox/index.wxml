<!--components/common/messageBox/index.wxml-->
<!-- 弹框 -->
<root-portal wx:if="{{showMessageBox}}">
  <view class="message-panel">
    <view class="mask" style="opacity: {{showModal ? 1 : 0}}" />
    <view class="message-box {{showModal ? 'show' : ''}}">
      <view class="message-content" wx:if="{{isShowMessage}}">
        <view class="message-title">{{messaegBoxInfo.title}}</view>
        <rich-text
          class="message-text"
          style="--text-color: {{messaegBoxInfo.messageColor}}"
          nodes="{{messaegBoxInfo.message}}" />
        <view class="message-btn-group">
          <view
            wx:if="{{messaegBoxInfo.showCancelButton}}"
            class="message-btn cancel-btn"
            style="--btn-color: {{messaegBoxInfo.cancelColor}};--btn-background: {{messaegBoxInfo.cancelBackground}}"
            catchtap="handleCancelMessage"
          >
            {{messaegBoxInfo.cancelButtonText}}
          </view>
          <view
            class="message-btn"
            style="--btn-color: {{messaegBoxInfo.confirmColor}};--btn-background: {{messaegBoxInfo.confirmBackground}}"
            catchtap="handleConfirmMessage">
            {{messaegBoxInfo.confirmButtonText}}
          </view>
        </view>
      </view>
      <slot wx:else name="content"></slot>
    </view>
  </view>
</root-portal>
