<!-- pages/jobDetail/components/jobBanner/index.wxml -->
<view class="common-banner" wx:if="{{bannerList && bannerList.length}}">
  <image wx:if="{{bannerList.length === 1}}" class="banner-img" src="{{bannerList[0]}}" mode="aspectFill" />
  <block wx:else>
    <swiper
      class="banner-swiper"
      autoplay
      circular
      indicator-dots
      indicator-color="rgba(0,0,0,0.12)"
      indicator-active-color="rgba(0,0,0,0.4)"
      indicator-spacing="4"
      indicator-offset="{{[0, 10]}}"
      interval="{{4000}}"
      current="{{currentPic}}"
      bindchange="onSlideChange">
      <swiper-item wx:for="{{bannerList}}" wx:key="index">
        <image class="banner-img" src="{{item}}" mode="aspectFill" />
      </swiper-item>
    </swiper>
  </block>
</view>